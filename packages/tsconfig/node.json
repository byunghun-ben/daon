{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "types": ["node"],
    "moduleResolution": "node",
    "declaration": false,
    "declarationMap": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@daon/shared": ["../../packages/shared/dist/index"]
    }
  }
}
