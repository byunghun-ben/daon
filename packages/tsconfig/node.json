{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "types": ["node"],
    "moduleResolution": "nodenext",
    "declaration": false,
    "declarationMap": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
